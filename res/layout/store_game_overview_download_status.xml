<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/animStrokenView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"

        >

    <LinearLayout
            android:id="@+id/downloadStatus"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dip"
            android:orientation="vertical"
            android:layout_marginRight="20dip"
            android:layout_marginLeft="20dip"
            android:gravity="center_horizontal"

            android:background="@drawable/gradient_alert_window"

            >
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dip"

                android:text="Download Status"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dip"

                android:text="Game Messages"
                android:textColor="@color/white"
                />
        <ProgressBar
                android:id="@+id/messageProgressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:layout_margin="10dip"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dip"

                android:text="Game Content"
                android:textColor="@color/white"
                />
        <ProgressBar
                android:id="@+id/contentProgressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:layout_margin="10dip"/>

        <TextView
                android:id="@+id/closeWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="20dip"
                android:text="@string/closeMessage"

                android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

</RelativeLayout>