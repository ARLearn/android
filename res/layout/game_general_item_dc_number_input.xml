<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_gravity="center_vertical"
              android:background="#99000000"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >

<LinearLayout
              android:id="@+id/functionPad"
              style="@style/ARLearn.Game.DataCollection"
              >

    <TextView android:id="@+id/text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/provideValue"
              android:textSize="30dp"
              android:padding="15dip"/>

    <LinearLayout
            android:id="@+id/row1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dip"

             >

        <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="right"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="0"
                android:textColor="@color/abs__background_holo_dark"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
        >

    <RelativeLayout
            android:id="@+id/row4"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_weight=".12" >


        <Button
                android:id="@+id/button1"
                style="@style/ARLearn.Game.DataCollectionValue.Button"
                android:text="1"
                android:layout_alignParentLeft="true"
                />

        <Button
                android:layout_centerHorizontal="true"
                android:id="@+id/button2"
                android:text="2"
                style="@style/ARLearn.Game.DataCollectionValue.Button"
                />

        <Button
                android:id="@+id/button3"
                android:text="3"
                android:layout_alignParentRight="true"

                style="@style/ARLearn.Game.DataCollectionValue.Button"
                />


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".12" >

        <Button
                android:id="@+id/button4"
                android:text="4"
                android:layout_alignParentLeft="true"
                style="@style/ARLearn.Game.DataCollectionValue.Button"/>

        <Button
                android:layout_centerHorizontal="true"

                android:id="@+id/button5"
                android:text="5"
                style="@style/ARLearn.Game.DataCollectionValue.Button" />

        <Button
                android:layout_alignParentRight="true"

                android:id="@+id/button6"
                android:text="6"
                style="@style/ARLearn.Game.DataCollectionValue.Button" />


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/row6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".12" >

        <Button
                android:id="@+id/button7"
                android:layout_alignParentLeft="true"
                android:text="7"
                style="@style/ARLearn.Game.DataCollectionValue.Button"/>

        <Button
                android:id="@+id/button8"
                android:layout_centerHorizontal="true"

                android:text="8"
                style="@style/ARLearn.Game.DataCollectionValue.Button" />

        <Button
                android:id="@+id/button9"
                android:layout_alignParentRight="true"

                android:text="9"
                style="@style/ARLearn.Game.DataCollectionValue.Button"/>


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/row7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".12" >

        <Button
                android:id="@+id/buttonDot"
                android:layout_alignParentLeft="true"
                android:text="."
                style="@style/ARLearn.Game.DataCollectionValue.Button" />

        <Button
                android:id="@+id/button0"
                android:text="0"
                android:layout_centerHorizontal="true"

                style="@style/ARLearn.Game.DataCollectionValue.Button"/>

        <Button
                android:id="@+id/buttonBack"
                android:text="B"
                android:layout_alignParentRight="true"

                style="@style/ARLearn.Game.DataCollectionValue.Button"/>


    </RelativeLayout>
    </LinearLayout>


    <TextView
            android:id="@+id/dataCollectionSubmit"
            android:visibility="gone"
            style="@style/ARLearn.Game.Button"
            android:text="@string/submit"/>

    <TextView
            android:id="@+id/cancelId"

            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:textSize="15dp"
            android:paddingTop="20dip"

            android:paddingBottom="20dip"
            android:layout_gravity="center_horizontal"
            android:text="Cancel"/>
</LinearLayout>
</LinearLayout>