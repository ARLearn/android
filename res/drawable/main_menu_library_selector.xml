<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:state_pressed="true"
            >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <gradient
                    android:startColor="#217eba"
                    android:endColor="#419cd7"
                    android:angle="270"/>

            <corners android:bottomRightRadius="2dp" android:bottomLeftRadius="2dp"
                     android:topLeftRadius="2dp" android:topRightRadius="2dp"/>
        </shape>
    </item>
    <item
            android:state_pressed="false"
            >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <gradient
                    android:startColor="#ff664c"
                    android:endColor="#e94a35"
                    android:angle="270"/>


            <corners android:bottomRightRadius="2dp" android:bottomLeftRadius="2dp"
                     android:topLeftRadius="2dp" android:topRightRadius="2dp"/>
        </shape>
    </item>
</selector>